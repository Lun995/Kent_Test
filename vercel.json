{
  "version": 2,
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "routes": [
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|svg|ico|css|js|mp3|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/main/(.*)",
      "dest": "/main/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
